<UserControl x:Class="WpfViews.Vinho.ucVinhoMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfViews.Vinho"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <TabControl HorizontalAlignment="Left" 
                    Height="440" 
                    Margin="10,10,0,-0.4" 
                    VerticalAlignment="Top" 
                    Width="780">
            <TabItem Header="Cadastrar"
                     Name="cadastrarVinho"
                     Style="{StaticResource subMenu}" >                
                <local:ucVinhoCadastro/>
            </TabItem>
            <TabItem Header="Listar"
                     Name="listarVinho"
                     Style="{StaticResource subMenu}">
                
            </TabItem>
            <TabItem Header="Buscar"
                     Name="buscarVinho"
                     Style="{StaticResource subMenu}">
                
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
